<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login | Task Manager</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        /* General Styles */
        body {
            font-family: 'Poppins', sans-serif;
            background: #ffffff;
        }

        /* Login Container */
        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            height: 100vh;
        }

        /* Login Box */
        .login-box {
            background: #ffffff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
            transition: 0.3s ease-in-out;
        }

        /* Header */
        .login-box h3 {
            color: #0056b3;
            font-weight: bold;
        }

        /* Input Fields */
        .input-group-text {
            background: #0056b3;
            color: white;
            border: none;
        }

        input.form-control {
            background: #f8f9fa;
            color: #333;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        /* Placeholder Text */
        input::placeholder {
            color: #aaa;
        }

        /* Button Hover Effect */
        .btn-primary {
            background-color: #0056b3;
            border: none;
            transition: 0.3s;
        }

        .btn-primary:hover {
            background-color: #004494;
            transform: scale(1.05);
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .login-box {
                padding: 30px;
            }
        }
    </style>
</head>
<body>

<!-- Login Form Container -->
<div class="login-container">
    <div class="login-box">
        <h3 class="text-center">Task Manager</h3>
        <p class="text-center text-muted">Welcome Back! Please Login</p>
        <hr>

        <!-- Error / Success Messages -->
        {{#if error}} <div class="alert alert-danger text-center">{{error}}</div> {{/if}}
        {{#if message}} <div class="alert alert-success text-center">{{message}}</div> {{/if}}

        <!-- Login Form -->
        <form action="/login" method="POST">
            <div class="input-group mb-3">
                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                <input type="email" name="email" class="form-control" placeholder="Email Address" required>
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                <input type="password" name="password" class="form-control" placeholder="Password" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>

        <!-- Register Link -->
        <p class="text-center mt-3 text-muted">
            Don't have an account? <a href="/register" class="text-primary">Register</a>
        </p>
    </div>
</div>

</body>
</html>
